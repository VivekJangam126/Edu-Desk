rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidUser() {
      return isAuthenticated() && 
             request.auth.uid != null && 
             request.auth.uid.size() > 0;
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Academic collections - read-only from client
    match /colleges/{collegeId} {
      allow read: if true; // Public read access
      allow write: if false; // No client writes allowed
    }
    
    match /departments/{departmentId} {
      allow read: if true; // Public read access  
      allow write: if false; // No client writes allowed
    }
    
    match /subjects/{subjectId} {
      allow read: if true; // Public read access
      allow write: if false; // No client writes allowed
    }
    
    // Notes collection - public read, auth required for write
    match /notes/{noteId} {
      allow read: if true; // Public read access for browsing
      allow create: if isValidUser() && 
                   request.auth.uid == resource.data.uploadedBy;
      allow update: if isOwner(resource.data.uploadedBy);
      allow delete: if isOwner(resource.data.uploadedBy);
    }
    
    // Comments collection - auth required
    match /comments/{commentId} {
      allow read: if true; // Public read access
      allow create: if isValidUser() && 
                   request.auth.uid == resource.data.userId;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Ratings collection - auth required
    match /ratings/{ratingId} {
      allow read: if true; // Public read for aggregation
      allow create: if isValidUser() && 
                   request.auth.uid == resource.data.userId;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Favorites collection - auth required, users can only access their own
    match /favorites/{favoriteId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isValidUser() && 
                   request.auth.uid == resource.data.userId;
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}